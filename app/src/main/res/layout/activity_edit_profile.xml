<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="412dp"
    android:layout_height="915dp"
    android:background="@drawable/editprofile"
    tools:context=".EditProfile">

    <EditText
        android:id="@+id/user"
        android:layout_width="259dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />

    <EditText
        android:id="@+id/bio"
        android:layout_width="255dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Bio"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.663" />

    <EditText
        android:id="@+id/FunFact"
        android:layout_width="253dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Fun Fact"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <Button
        android:id="@+id/editPhoto"
        android:layout_width="217dp"
        android:layout_height="66dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Edit PDP"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <Button
        android:id="@+id/Save"
        android:layout_width="222dp"
        android:layout_height="61dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Save"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="126dp"
        android:layout_height="83dp"
        android:layout_marginBottom="824dp"
        android:backgroundTint="#03FFFFFF"
        android:contentDescription="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/next" />

    <ImageButton
        android:id="@+id/prec"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginBottom="824dp"
        android:backgroundTint="#02FFFFFF"
        android:contentDescription="prec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/prec" />

</androidx.constraintlayout.widget.ConstraintLayout>